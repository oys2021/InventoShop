@{
  var categories=ViewData["categories"] as List<Category>;
  var product = ViewData["product"] as Product;

}

<form method="POST" enctype="multipart/form-data">
    <div class="container">
      <div class="row justify-content-center">
        <div class="col-lg-6">
          <div class="card">
            <div class="card-body">

              <!-- Product Name Field (Pre-filled) -->
              <div class="row mb-3">
                <div class="col-12">
                  <div class="form-group">
                    <label for="product_name">Product Name</label>
                    <input type="text" id="product_name" name="product_name" class="form-control" value="@product.ProductName"  required>
                  </div>
                </div>
              </div>

              <!-- Category Selection (Pre-filled with selected category) -->
              <div class="row mb-3">
                <div class="col-12">
                  <div class="form-group">
                    <label for="category_id">Category</label>
                    <select id="category_id" name="category_id" class="form-control" required>
                      <option value="">--Select--</option>
                      @foreach (var category in categories)
                      {
                        <option value="@category.id" @(category.id == product.CategoryId ? "selected" : "")>@category.category_name</option>
                      }
                    </select>
                  </div>
                </div>
              </div>

              <!-- Price Field (Pre-filled) -->
              <div class="row mb-3">
                <div class="col-12">
                  <div class="form-group">
                    <label for="price">Price</label>
                    <input type="number" step="0.01" id="price" name="price"  value="@product.Price" class="form-control"  required>
                  </div>
                </div>
              </div>

<div class="row mb-3">
  <div class="row mb-3">
  <div class="col-12">
    <div class="form-group">
      <label for="expiration_date">Expiration Date</label>
      <input type="date" id="expiration_date" name="expiration_date" class="form-control" 
             value="@((product.ExpirationDate.HasValue) ? product.ExpirationDate.Value.ToString("yyyy-MM-dd") : "")">
    </div>
  </div>
</div>





              <!-- Quantity in Stock Field (Pre-filled) -->
              <div class="row mb-3">
                <div class="col-12">
                  <div class="form-group">
                    <label for="quantity_in_stock">Quantity in Stock</label>
                    <input type="number" id="quantity_in_stock" name="quantity_in_stock" class="form-control" value="@product.QuantityInStock" required>
                  </div>
                </div>
              </div>
<!-- Product Image Field -->
<div class="row mb-3">
    <div class="col-12">
        <div class="form-group">
            <label for="image_url">Product Image</label>

            <!-- Display the current product image -->
            @if (!string.IsNullOrEmpty(@product.ImageUrl))
            {
                <div>
                    <img src="@Url.Content(@product.ImageUrl)" alt="Current Product Image" style="max-width: 100px; max-height: 100px;">
                </div>
            }

            <!-- Image input to update the image -->
            <input type="file" id="image_url" name="image_url" class="form-control">

            <!-- If the image URL is prepopulated, you can also include a hidden input to pass the previous image URL on form submission if no new image is selected -->
            <input type="hidden" name="existing_image_url" value="@product.ImageUrl" />
        </div>
    </div>
</div>

            

              <!-- Submit and Cancel Buttons -->
              <div class="row">
                <div class="col-12">
                    @* <input type="hidden" name="product_id" value="@Model.ProductId" /> *@
                    <button type="submit" class="btn btn-submit me-2">Update Product</button>
                    <a href="/assistant/productlist" class="btn btn-cancel">Cancel</a>
                </div>
              </div>

            </div>
          </div>
        </div>
      </div>
    </div>
</form>
